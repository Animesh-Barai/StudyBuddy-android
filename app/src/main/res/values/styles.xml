<resources>


	<style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- The default primary colour -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- The dark primary colour variant -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- The accent colour -->
		<item name="colorSecondary">@color/colorSecondary</item>
		<!-- The colour of the navigation bar -->
		<item name="android:navigationBarColor">@color/colorPrimary</item>
		<!-- The font family of the app -->
		<item name="fontFamily">@font/baloo</item>
		<!-- The text input style -->
		<item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox
		</item>
		<!-- The edit text style -->
		<item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox
		</item>
		<!-- The font family of the app -->
		<item name="android:fontFamily">@font/baloo</item>
		<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Theme.SmallComponent
		</item>
		<item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Theme.MediumComponent
		</item>
		<item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Theme.LargeComponent
		</item>
	</style>
