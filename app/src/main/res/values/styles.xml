<resources xmlns:tools="http://schemas.android.com/tools">


	<style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- The default primary colour -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- The dark primary colour variant -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- The accent colour -->
		<item name="colorSecondary">@color/colorSecondary</item>
		<!-- The colour of the navigation bar -->
		<item name="android:navigationBarColor">@color/colorPrimary</item>
		<!-- The font family of the app -->
		<item name="fontFamily">@font/baloo</item>
		<!-- The text input style -->
		<item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox
		</item>
		<!-- The edit text style -->
		<item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox
		</item>
		<!-- The font family of the app -->
		<item name="android:fontFamily">@font/baloo</item>
		<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent
		</item>
		<item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
		</item>
		<item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent
		</item>
		<item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
	</style>
	<!-- Base application theme. -->
	<style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- The default primary colour -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- The dark primary colour variant -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- The accent colour -->
		<item name="colorSecondary">@color/colorSecondary</item>
		<!-- The colour of the navigation bar -->
		<item name="android:navigationBarColor">@color/colorPrimary</item>
		<!-- The font family of the app -->
		<item name="fontFamily">@font/baloo</item>
		<!-- The text input style -->
		<item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox
		</item>
		<!-- The edit text style -->
		<item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox
		</item>
		<!-- The font family of the app -->
		<item name="android:fontFamily">@font/baloo</item>
		<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent
		</item>
		<item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
		</item>
		<item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent
		</item>
		<item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
	</style>
	<!-- ImageButton theme that more closely matches the Material specs. -->
	<style name="Theme.App.ImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="android:layout_width" tools:ignore="PrivateResource">@dimen/mtrl_min_touch_target_size</item>
		<item name="android:layout_height" tools:ignore="PrivateResource">@dimen/mtrl_min_touch_target_size</item>
		<item name="android:background">?attr/actionBarItemBackground</item>
	</style>

	<!-- Workaround for rounded corners showing at the bottom of the bottom sheet -->
	<style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
	</style>

	<style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.BottomSheet.Modal</item>
	</style>
	<style name="ShapeAppearanceOverlay.App.BottomSheet.Modal" parent="">
		<item name="cornerSizeBottomLeft">0dp</item>
		<item name="cornerSizeBottomRight">0dp</item>
	</style>
	<!--
	TODO: Customize the ShapeAppearance
	Note that such styles should come in the next release
	-->
	<style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">4dp</item>
	</style>

	<style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">8dp</item>
	</style>

	<style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">24dp</item>
	</style>

