<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="5dp">

		<android.support.design.widget.TextInputLayout
			android:id="@+id/custom_dialog_title_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/custom_dialog_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/task_title" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/custom_dialog_content_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/custom_dialog_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/task_content" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/custom_dialog_project_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/custom_dialog_project"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/task_project" />
		</android.support.design.widget.TextInputLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_margin="10dp">

			<TextView
				android:id="@+id/custom_dialog_datepicker_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/due_date" />

			<LinearLayout
				android:id="@+id/custom_dialog_datepicker_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/custom_dialog_datepicker_result"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/due_date_text" />

				<ImageButton
					android:id="@+id/custom_dialog_datepicker_btn"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
					android:layout_weight="0"
					android:background="?selectableItemBackgroundBorderless"
					android:src="@drawable/ic_calendar_today_24dp"
					android:contentDescription="Choose a date..." />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>